{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["dom", "es2017"],
        "sourceMap": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "~/*": ["app/*"],
            "@/*": ["app/*"]
        },
        "types": ["node"],
        "typeRoots": ["types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    },
    "include": ["./app", "types", "../demo-snippets/vue"],
    "exclude": ["node_modules", "platforms"]
}
